<% include ../partials/header %>
    
<div style="width:100%;">
<div class="form-box wow fadeInUp" style="width: 40%; margin: 70px auto; box-shadow: 0 0 20px rgba(0,0,0,.3)">
                        	<div class="form-top"style="background: #111;
    border-bottom: 1px solid rgba(169,169,169,0.7);">
                        		<div class="form-top-left">
                        			<h1>Edit Story</h1>
                            		<p style="font-weight:100;">Fill in the form below to edit your story:</p>
                        		</div>
                        		<div class="form-top-right">
                        			<span aria-hidden="true" class="typcn typcn-edit"></span>
                        		</div>
                            </div>
                            <div class="form-bottom" style="background:#333;">
			                    <form role="form" action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" class="registration-form">
			                    	<div class="form-group">
			                    		<label class="sr-only" for="form-first-name">Username</label>
			                        	<input type="text" name="campground[name]" placeholder="Title" class="form-first-name form-control" value="<%= campground.name %>" id="form-first-name" style="border-radius:0px;">
			                        </div>
			                        <div class="form-group">
			                    		<label class="sr-only" for="form-first-name">Username</label>
			                        	<input type="text" name="campground[image]" placeholder="Image url" class="form-first-name form-control" value="<%= campground.image %>" id="form-first-name" style="border-radius:0px;">
			                        </div>
			                        <textarea class="form-group" style="border-radius:0px;" name="campground[description]" placeholder="Describe your Story"><%= campground.description %></textarea>
			                        <button type="submit" class="btn" style="border-radius:0px;">Edit!</button>
			                    </form>
		                    </div>
                        </div>
</div>
<% include ../partials/footer %> 