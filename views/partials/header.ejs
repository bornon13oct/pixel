<div class="container">
    <% if(error && error.length > 0) { %>
        <div class="alert alert-danger">
                <strong><%= error %></strong>
        </div>
    <% } %>
    <% if(success && success.length > 0) { %>
        <div class="alert alert-success">
                <strong><%= success %></strong>
        </div>
    <% } %>