<% include partials/header %>

<div style="width:100%;">
<div class="form-box wow fadeInUp" style="width: 40%; margin: 70px auto; box-shadow: 0 0 20px rgba(0,0,0,.3)">
                        	<div class="form-top" style="background: #111;
    border-bottom: 1px solid rgba(169,169,169,0.7);">
                        		<div class="form-top-left">
                        			<h1>Sign Up</h1>
                            		<p style="font-weight:100;">Fill in the form below to get instant access:</p>
                        		</div>
                        		<div class="form-top-right">
                        			<span aria-hidden="true" class="typcn typcn-user-add"></span>
                        		</div>
                            </div>
                            <div class="form-bottom" style="background:#333;">
			                    <form action="/register" role="form" action="" method="post" class="registration-form">
			                    	<div class="form-group">
			                    		<label class="sr-only" for="form-first-name">Username</label>
			                        	<input type="text" name="username" placeholder="Username" class="form-first-name form-control" id="form-first-name" style="border-radius:0px;">
			                        </div>
			                        <div class="form-group">
			                        	<label class="sr-only" for="form-last-name">Password</label>
			                        	<input type="password" name="password" placeholder="Password" class="form-last-name form-control" id="form-last-name" style="border-radius:0px;">
			                        </div>
			                        <button type="submit" class="btn" style="border-radius:0px;">Sign Up!</button>
			                    </form>
		                    </div>
                        </div>
</div>

<% include partials/footer %>